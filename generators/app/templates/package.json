{
  "name": "<%= projectName %>",
  "version": "0.0.1",
  "repository": "<Add your repository here>",
  "license": "UNLICENSED",
  "description": "<%= description %>",
  "dependencies": {
    "@sap/cds": "^6.1",
<% if(graphql){ -%>
    "@sap/cds-graphql": "^1",
<% } -%>
    "@sap/audit-logging": "^5",
<% if(hana || schemaName !== '' || hanaTargetHDI !== ''){ -%>
    "hdb": "^0.19",
<% } -%>
<% if(v2support){ -%>
    "@sap/cds-odata-v2-adapter-proxy": "^1",
<% } -%>
<% if(routes || api || app2appType === "access"){ -%>
    "@sap-cloud-sdk/http-client": "^2.5",
<% } -%>
<% if(em){ -%>
    "@sap/xb-msg-amqp-v100": "^0.9.51",
<% if(apiS4HCBP){ -%>
    "@sap/cloud-sdk-vdm-business-partner-service": "^2.1",
<% } -%>
<% } -%>
<% if(authentication || credStore !== ""){ -%>
    "@sap/xsenv": "^3",
<% } -%>
<% if(authentication || hana || apiSACTenant){ -%>
    "@sap/xssec": "^3",
    "passport": "^0.4.1",
<% } -%>
<% if(credStore !== ""){ -%>
    "node-fetch": "^2.6.1",
    "node-jose": "^2",
<% } -%>
<% if(multiTenant){ -%>
    "@sap/cds-mtx": "^2",
    "cfenv": "^1",
<% } -%>
<% if(apiARIBWS || apiCONC || app2appType === "access"){ -%>
    "axios": "^0.21.1",
    "qs": "^6",
<% } %>
<% if(apiARIBWS){ -%>
    "easy-soap-request": "^4.1.3",
<% } -%>
<% if(applicationLogging){ -%>
    "cf-nodejs-logging-support": "^6",
<% } -%>
<% if(swagger){ -%>
    "cds-swagger-ui-express": "^0.1",
<% } -%>
<% if(apiFGCN){ -%>
    "uuid": "^8.3",
<% } -%>
    "debug": "^4.3",
    "express": "^4"
  },
  "devDependencies": {
    "sqlite3": "^5.0.2"
<% if(hana && ui){ -%>
    ,"@sap/ux-specification": "^1.96.4"
<% } -%>
<% if(v2support){ -%>
    ,"@sap/cds-odata-v2-adapter-proxy": "^1"
<% } -%>
  },
<% if(hana && ui){ -%>
  "sapux": [
<% if(html5repo){ -%>
    "app/fiori"
<% }else{ -%>
    "app/resources/fiori"
<% } -%>
  ],
<% } -%>
  "scripts": {
    "start": "cds run"
  },
  "eslintConfig": {
    "extends": "eslint:recommended",
    "env": {
      "es2020": true,
      "node": true,
      "jest": true,
      "mocha": true
    },
    "globals": {
      "SELECT": true,
      "INSERT": true,
      "UPDATE": true,
      "DELETE": true,
      "CREATE": true,
      "DROP": true,
      "CDL": true,
      "CQL": true,
      "CXL": true,
      "cds": true
    },
    "rules": {
      "no-console": "off",
      "require-atomic-updates": "off"
    }
  },
  "cds": {
<% if(apiGRAPH){ -%>
    "odata": {
      "flavor": "x4"
    },
<% } -%>
    "build": {
      "target": "gen",
      "tasks": [
<% if(hana || schemaName !== '' || hanaTargetHDI !== ''){ -%>
        {
          "for": "hana",
          "src": "db",
          "options": {
            "model": [
              "db",
<% if(srv2){ -%>
              "srv2",
<% } -%>
<% if(ui || authentication){ -%>
              "app",
<% } -%>
              "srv"
            ]
          }
        },
<% } -%>
        {
          "for": "node-cf",
          "src": "srv",
          "options": {
            "model": [
<% if(hana || schemaName !== '' || hanaTargetHDI !== ''){ -%>
              "db",
<% } -%>
<% if(ui || authentication){ -%>
              "app",
<% } -%>
              "srv"
            ]
          }
        }
<% if(srv2){ -%>
        ,
        {
          "for": "node-cf",
          "src": "srv2",
          "options": {
            "model": [
<% if(hana || schemaName !== '' || hanaTargetHDI !== ''){ -%>
              "db",
<% } -%>
<% if(ui || authentication){ -%>
              "app",
<% } -%>
              "srv2"
            ]
          }
        }
<% } -%>
<% if(multiTenant){ -%>
        ,
        {
          "for": "mtx",
          "src": ".",
          "dest": "srv",
          "options": {
            "model": [
<% if(hana){ -%>
              "db",
<% } -%>
<% if(ui || authentication){ -%>
              "app",
<% } -%>
<% if(srv2){ -%>
              "srv2",
<% } -%>
              "srv",
              "."
            ]
          }
        }
<% } -%>
      ]
    },
<% if(graphql){ -%>
    "plugins": [
      {
        "impl": "@sap/cds-graphql",
        "path": "/graphql"
      }
    ],
<% } -%>
    "requires": {
<% if(authentication){ -%>
      "uaa": {
        "kind": "xsuaa"
      },
      "auth": {
        "[production]": {
          "strategy": "JWT"
        },
        "[development]": {
          "strategy": "mock",
          "users": {
            "joe": {
<% if(authorization){ -%>
              "roles": [
                "Admin",
                "Viewer"
              ]
<% if(attributes){ -%>
              ,
              "userAttributes": {
                "Region": [
                  "$UNRESTRICTED"
                ]
              }
<% } -%>
<% } -%>
            },
            "julie": {
<% if(authorization){ -%>
              "roles": [
                "Viewer"
              ]
<% if(attributes){ -%>
              ,
              "userAttributes": {
                "Region": [
                  "North America",
                  "Asia"
                ]
              }
<% } -%>
<% } -%>
            },
            "bob": {
<% if(authorization){ -%>
              "roles": [
                "Viewer"
              ]
<% if(attributes){ -%>
              ,
              "userAttributes": {
                "Region": [
                  "Europe"
                ]
              }
<% } -%>
<% } -%>
            }
          }
        }
      }
<% } else { -%>
      "auth": {
        "restrict_all_services": false
      }
<% } -%>
<% if(hana || schemaName !== '' || hanaTargetHDI !== ''){ -%>
      ,
      "db": {
        "[production]": {
          "kind": "hana-cloud"
        },
        "[development]": {
          "kind": "sql"
        },
        "model": [
          "db",
          "srv"
<% if(srv2){ -%>
          ,"srv2"
<% } -%>
        ]
<% if(multiTenant){ -%>
        ,
        "vcap": {
          "label": "service-manager"
        }
<% } -%>
      }
<% } -%>
<% if(multiTenant){ -%>
      ,
      "multitenancy": true
<% } -%>
<% if(apiS4HCSO){ -%>
      ,
      "API_SALES_ORDER_SRV": {
        "kind": "odata-v2",
        "model": "srv/external/API_SALES_ORDER_SRV",
        "credentials": {
          "[production]": {
            "destination": "<%= projectName %>-API_SALES_ORDER_SRV",
            "path": "s4hanacloud/sap/opu/odata/sap/API_SALES_ORDER_SRV"
          },
          "[development]": {
            "url": "https://sandbox.api.sap.com/s4hanacloud/sap/opu/odata/sap/API_SALES_ORDER_SRV"
          }
        }
      }
<% } -%>
<% if(apiS4HCBP){ -%>
      ,
      "API_BUSINESS_PARTNER": {
        "kind": "odata-v2",
        "model": "srv/external/API_BUSINESS_PARTNER",
        "credentials": {
          "[production]": {
            "destination": "<%= projectName %>-API_BUSINESS_PARTNER",
            "path": "s4hanacloud/sap/opu/odata/sap/API_BUSINESS_PARTNER"
          },
          "[development]": {
            "url": "https://sandbox.api.sap.com/s4hanacloud/sap/opu/odata/sap/API_BUSINESS_PARTNER"
          }
        }
      }
<% } -%>
<% if(apiSFSFRC){ -%>
      ,
      "RCMCandidate": {
        "kind": "odata-v2",
        "model": "srv/external/RCMCandidate",
        "credentials": {
          "[production]": {
            "destination": "<%= projectName %>-sf-api",
            "path": "odata/v2"
          },
          "[development]": {
            "url": "https://sandbox.api.sap.com/successfactors/odata/v2"
          }
        }
      }
<% } -%>
<% if(apiSFSFEC){ -%>
      ,
      "ECEmploymentInformation": {
        "kind": "odata-v2",
        "model": "srv/external/ECEmploymentInformation",
          "credentials": {
            "[production]": {
              "destination": "<%= projectName %>-sf-api",
              "path": "odata/v2"
            },
            "[development]": {
              "url": "https://sandbox.api.sap.com/successfactors/odata/v2"
            }
          }
        }
<% } -%>
<% if(apiARIBPO){ -%>
      ,
      "ARIBA_NETWORK_PURCHASE_ORDERS": {
        "kind": "rest",
        "impl": "srv/external/AribaNetworkPurchaseOrders.js",
        "credentials": {
          "[production]": {
            "destination": "<%= projectName %>-ariba-api",
            "path": "api/purchase-orders/v1/prod"
          },
          "[development]": {
            "url": "https://sandbox.api.sap.com/ariba/api/purchase-orders/v1/sandbox"
          }
        }
      }
<% } -%>
<% if(apiFGCN){ -%>
      ,
      "FieldglassConnectors": {
        "kind": "rest",
        "impl": "srv/external/FieldglassConnectors.js",
        "credentials": {
          "[production]": {
            "destination": "<%= projectName %>-fieldglass-api",
            "path": "/api/vc/connector"
          },
          "[development]": {
            "destination": "<%= projectName %>-fieldglass-api",
            "path": "/api/vc/connector"
          }
        }
      }
<% } -%>
<% if(apiFGAP){ -%>
        ,
        "FieldglassApprovals": {
          "kind": "rest",
          "impl": "srv/external/FieldglassApprovals.js",
          "credentials": {
            "[production]": {
              "destination": "<%= projectName %>-fieldglass-api",
              "path": "/api/v1"
            },
            "[development]": {
              "url": "https://sandbox.api.sap.com/fieldglass/api/v1"
            }
          }
        }
  <% } -%>
  <% if(apiCONC){ -%>
      ,
      "Concur": {
        "kind": "rest",
        "impl": "srv/external/Concur.js",
        "credentials": {
          "[production]": {
            "destination": "<%= projectName %>-concur-api"
          },
          "[development]": {
            "destination": "<%= projectName %>-concur-api"
          }
        }
      }
<% } -%>
<% if(apiGRAPH){ -%>
      ,
<% let i = 0 -%>
<% graphDataSources.forEach(element => { -%>
      "<%= element.name %>": {
        "kind": "odata",
        "model": "srv/external/<%= element.name %>",
        "credentials": {
          "[production]": {
            "destination": "<%= projectName %>-graph-api",
            "path": "/<%= GraphId %>/<%= element.url %>"
          },
          "[development]": {
            "destination": "<%= projectName %>-graph-api",
            "path": "/<%= GraphId %>/<%= element.url %>"
          }
        }
      }
<% i = i + 1 -%>
<% if(i !== graphDataSources.length){ -%>
      ,
<% } -%>
<% }); -%>
<% } -%>
<% if(apiAICORE){ -%>
      ,
      "AICore": {
        "kind": "rest",
        "credentials": {
          "[production]": {
            "destination": "<%= projectName %>-aicore-api",
            "path": "/v2/inference/deployments"
          },
          "[development]": {
            "destination": "<%= projectName %>-aicore-api",
            "path": "/v2/inference/deployments"
          }
        }
      }
<% } -%>
<% if(apiSACTenant){ -%>
      ,
      "SACTenant": {
        "kind": "rest",
        "impl": "srv/external/SACTenant.js",
        "credentials": {
          "[production]": {
            "destination": "<%= projectName %>-sac-tenant-api",
            "path": "/api/v1"
          },
          "[development]": {
            "destination": "<%= projectName %>-sac-tenant-api",
            "path": "/api/v1"
          }
        }
      }
<% } -%>
<% if(apiHERE){ -%>
      ,
      "HERELocationServices": {
        "kind": "rest",
        "impl": "srv/external/HERELocationServices.js",
        "credentials": {
          "[production]": {
            "destination": "<%= projectName %>-HERE-api",
            "path": "v1"
          },
          "[development]": {
            "url": "https://geocode.search.hereapi.com/v1"
          }
        }
      }
<% } -%>
<% if(apiNeoWs){ -%>
      ,
      "NearEarthObjectWebService": {
        "kind": "rest",
        "impl": "srv/external/NearEarthObjectWebService.js",
        "credentials": {
          "[production]": {
            "destination": "<%= projectName %>-NASA-api",
            "path": "neo/rest/v1"
          },
          "[development]": {
            "url": "https://api.nasa.gov/neo/rest/v1"
          }
        }
      }
<% } -%>
<% if(em){ -%>
      ,
      "messaging": {
        "[production]": {
<% if(multiTenant){ -%>
          "kind": "enterprise-messaging",
<% } else { -%>
          "kind": "enterprise-messaging-shared",
<% } -%>
          "queue": {
            "name": "<%= emNamespace %>/<%= projectName %>/queue/default"
          }
        },
        "[development]": {
          "kind": "local-messaging"
        }
      }
<% } -%>
    }
<% if(multiTenant){ -%>
    ,
    "mtx": {
      "api": {
        "provisioning": true,
        "metadata": true,
        "model": true
      },
      "element-prefix": [
        "Z_",
        "ZZ_"
      ],
      "namespace-blocklist": [
        "com.sap.",
        "sap.",
        "<%= projectName %>."
      ],
      "extension-allowlist": [
        {
          "for": ["<%= projectName %>.db.Sales"]
        },
        {
          "for": ["CatalogService"],
          "kind": "service"
        }
      ]
    }
<% } -%>
  }
}
